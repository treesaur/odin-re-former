<%= form_with model: @user do |form| %>
  <%= form.label :username, "Username:" %>
  <%= form.text_field :username, placeholder:"Your username here" %><br><br>
  <%= form.label :password, "Password:" %>
  <%= form.password_field :password, placeholder:"******" %><br><br>
  <%= form.label :email, "E-mail:" %>
  <%= form.email_field :email, placeholder:"example@example.com" %><br><br>
  <%= form.submit "Submit" %>
<% end %>